{
  "name": "sportradar-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "dev:spectator": "pnpm --filter @sportradar/spectator dev",
    "dev:website": "pnpm --filter @sportradar/website dev",
    "build": "turbo run build",
    "build:spectator": "pnpm --filter @sportradar/spectator build",
    "build:website": "pnpm --filter @sportradar/website build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
